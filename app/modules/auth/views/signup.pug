			function validateForm() {
			var x = document.forms["myForm"]["username"].value;
			var y = document.forms["myForm"]["email"].value;
			var z = document.forms["myForm"]["pw"].value;
			var v = document.forms["myForm"]["bday"].value;
			var w = document.forms["myForm"]["year"].value;
			if(x.match("/")||x.match('"')||x.match('=')){
			alert("Some special characters are not allowed.");
			return false;
			}
			if (x == "") {
			alert("Username is Required!");
			return false;
			}
			if (y == "") {
			alert("E-mail is Required!");
			return false;
			}
			if (z == "") {
			alert("Password is Required!");
			return false;
			}
			if (w == "") {
			alert("Year is Required!");
			return false;
			}
			if (v == "") {
			alert("Month and Day are Required!");
			return false;
			}
			if(x||y||z||w||v != "")
			{
				return true;
			}
