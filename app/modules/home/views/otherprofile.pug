doctype html
html(lang='en')
	head
		title Forumula
		link(rel='shortcut icon', href='../../assets/shortcut.png')
		link(rel='stylesheet', type='text/css', href='../../assets/css/profile.css')
		link(href='../../assets/font-awesome-4.7.0/css/font-awesome.min.css', rel='stylesheet', type='text/css', media='all')
	body
		// this is the markup. you can change the details (your own name, your own avatar etc.) but don’t change the basic structure!
		aside.profile-card
			header
				// here’s the avatar
				a(href='http://victory-design.ru/')
					img(src=`../../assets/uploads/${puta.image}`)
				// the username
				h1(style="font-family: century gothic; color: #ff1493;") #{puta.username}
				// and role or location
				h2(style="font-family: century gothic;") #{puta.email}
			// bit of a bio; who are you?
			.profile-bio
				center
					p(style="font-family: century gothic; color: #ff1493; font-size: 35px;") #{puta.bday}
					br
					br
			// some social links to show off
			ul.profile-social-links
				// twitter - el clásico
				li
					a(href="http://localhost:3009/index")
						button
							i.fa.fa-arrow-left.fa-2x(style="color: #ff1493;")
		style.
			button {
			background-color: Transparent;
			background-repeat:no-repeat;
			border: none;
			cursor:pointer;
			overflow: hidden;
			outline:none;
			}
